{
  "compilerOptions": {
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "importHelpers": true,
    "lib": [ "dom", "es6", "es2016", "es2017", "es2018", "es2019" ],
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2020",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "watch": true
  }
}